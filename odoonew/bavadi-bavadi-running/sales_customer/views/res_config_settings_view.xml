<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_sales_customer" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sales.customer</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//div[hasclass('settings')]/div[@data-key='sale_management']/div[5]"
                        position="inside">

                    <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_customer_invoicing"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_customer_invoicing"/>
                                <div class="text-muted">
                                    To activate Customers menu in sales module
                                </div>
                            </div>
                        </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>